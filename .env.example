# ===========================================
# LDCC DM Manager - Environment Variables
# ===========================================
# Copy this file to .env and fill in real values
# cp .env.example .env

# -------------------------------------------
# Google AI (Gemini)
# -------------------------------------------
GOOGLE_API_KEY=your-gemini-api-key

# -------------------------------------------
# Instagram API
# -------------------------------------------
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_PAGE_ID=123456789012345
INSTAGRAM_VERIFY_TOKEN=your-webhook-verify-token
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# -------------------------------------------
# WhatsApp Business API
# -------------------------------------------
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=123456789012345
MANAGER_WHATSAPP_NUMBER=447123456789
WHATSAPP_BOOKING_TEMPLATE=ldcc_booking_confirmed_v2
WHATSAPP_ESCALATION_TEMPLATE=ldcc_dm_escalation_v2
NET_SESSION_COORDINATOR=Adarsh

# -------------------------------------------
# Cloud Tasks
# -------------------------------------------
PROCESS_MESSAGE_URL=https://us-central1-ldcc-dm-manager.cloudfunctions.net/processMessage
CLOUD_TASKS_QUEUE=dm-processing
CLOUD_FUNCTIONS_REGION=europe-west2

# -------------------------------------------
# GenKit
# -------------------------------------------
ENABLE_FIREBASE_MONITORING=true

# -------------------------------------------
# Test Mode (Optional)
# -------------------------------------------
# When set, only accept messages from this Instagram username
# TEST_MODE_USERNAME=vishalvijay