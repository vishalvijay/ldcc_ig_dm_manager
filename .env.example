# ===========================================
# LDCC DM Manager - Environment Variables
# ===========================================
# Copy this file to .env and fill in real values
# cp .env.example .env

# -------------------------------------------
# AI Model Configuration
# -------------------------------------------
# Model name — provider is auto-detected from the name:
#   claude-* → Anthropic    gemini-* → Google AI
AI_MODEL=claude-sonnet-4

# Anthropic API key (required for claude-* models)
ANTHROPIC_API_KEY=your-anthropic-api-key
# Google AI API key (required for gemini-* models)
# GOOGLE_API_KEY=your-google-api-key

# -------------------------------------------
# Meta Messenger API
# -------------------------------------------
META_MESSENGER_ACCESS_TOKEN=your-meta-messenger-access-token
META_MESSENGER_PAGE_ID=123456789012345
META_INSTAGRAM_ACCOUNT_ID=your-instagram-account-id
META_MESSENGER_VERIFY_TOKEN=your-webhook-verify-token
META_MESSENGER_APP_SECRET=your-meta-messenger-app-secret

# -------------------------------------------
# Telegram Bot API
# -------------------------------------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
NET_SESSION_COORDINATOR=Adarsh

# -------------------------------------------
# Firebase Functions
# -------------------------------------------
CLOUD_FUNCTIONS_REGION=europe-west2
DEBOUNCE_DELAY_SECONDS=60

# -------------------------------------------
# GenKit
# -------------------------------------------
ENABLE_FIREBASE_MONITORING=true

# -------------------------------------------
# Test Mode (Optional)
# -------------------------------------------
# When set, only accept messages from this sender ID
# TEST_MODE_SENDER_ID=123456789

# When set, sending this keyword resets/deletes all conversation data for that sender
# RESET_KEYWORD=resetreset
