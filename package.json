{
  "name": "ldcc-dm-manager",
  "version": "1.0.0",
  "description": "Instagram DM Agent for London Desperados Cricket Club",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "genkit:dev": "npx genkit start -- npx tsx --watch src/index.ts",
    "genkit:flow:run": "npx genkit flow:run"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@genkit-ai/firebase": "^1.28.0",
    "@genkit-ai/google-genai": "^1.28.0",
    "@genkit-ai/mcp": "^1.0.0",
    "@google-cloud/tasks": "^5.5.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^7.0.5",
    "genkit": "^1.0.0",
    "google-auth-library": "^9.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "firebase-functions-test": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0"
  },
  "private": true
}
